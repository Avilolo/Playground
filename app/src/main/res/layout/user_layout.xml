<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="@drawable/item_bg"
        >
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/user_image_IV"
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:civ_border_width="3dp"
            app:civ_border_color="@color/black"
            ></de.hdodenhof.circleimageview.CircleImageView>

        <TextView
            android:id="@+id/user_name_TV"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:fontFamily="casual"
            android:text=""
            android:textSize="20dp"
            android:paddingTop="10dp"
            android:layout_toRightOf="@+id/user_image_IV"
            android:textAlignment="center"
            android:layout_gravity="center"></TextView>

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/user_online"
            android:layout_width="13dp"
            android:layout_height="13dp"
            app:civ_border_width="10dp"
            app:civ_border_color="@color/green_online"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="1dp"
            android:layout_marginLeft="-15dp"
            android:src="@color/green_online"
            android:layout_toRightOf="@+id/user_image_IV"
            android:layout_toEndOf="@id/user_image_IV"
            >

        </de.hdodenhof.circleimageview.CircleImageView>

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/user_offline"
            android:layout_width="13dp"
            android:layout_height="13dp"
            app:civ_border_width="10dp"
            app:civ_border_color="@color/grey_offline"
            android:src="@color/grey_offline"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="1dp"
            android:layout_marginLeft="-15dp"
            android:layout_toRightOf="@+id/user_image_IV"
            android:layout_toEndOf="@id/user_image_IV"
            >

        </de.hdodenhof.circleimageview.CircleImageView>

    </RelativeLayout>

</androidx.cardview.widget.CardView>